---
export interface Props {
    title: string;
    description: string;
    icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="group relative p-8 rounded-2xl bg-white/[0.03] border border-white/10 hover:border-brand-primary/50 transition-all duration-500 hover:-translate-y-2 overflow-hidden shadow-2xl">
    
    <div class="absolute top-0 left-0 w-40 h-40 bg-brand-primary opacity-20 blur-[80px] pointer-events-none group-hover:opacity-40 transition-opacity duration-700"></div>
    <div class="absolute top-2 left-2 w-16 h-16 bg-white opacity-5 blur-[40px] pointer-events-none group-hover:opacity-20 transition-opacity duration-700"></div>

    <div class="relative z-10">
        <div class="text-4xl mb-6 inline-block transform group-hover:scale-110 transition-transform duration-500">
            {icon}
        </div>
        
        <h3 class="text-xl font-black text-white mb-3 tracking-tight group-hover:text-brand-primary transition-colors duration-300">
            {title}
        </h3>
        
        <p class="text-slate-400 font-light leading-relaxed group-hover:text-slate-300 transition-colors">
            {description}
        </p>
    </div>
</div>