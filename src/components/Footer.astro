---
const footerLinks = [
    { title: 'Accueil', url: '/' },
    { title: 'Portfolio', url: '/portfolio' },
    { title: 'Services', url: '#services' },
    { title: 'À Propos', url: '/a-propos' },
];

const legalLinks = [
    { title: 'Mentions Légales', url: '/mentions-legales' },
    { title: 'Politique de Confidentialité', url: '/politique-confidentialite' },
];

const contactInfo = {
    email: 'contact@votrenom.com',
    phone: '+33 1 23 45 67 89'
};

const currentYear = new Date().getFullYear();
---

<footer class="bg-brand-dark border-t border-white/5">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-16 md:py-24">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-12 border-b border-white/5 pb-16 mb-12">
            
            <div class="space-y-6">
                <a href="/" class="text-2xl font-black text-white tracking-tighter">
                    [NOM]
                </a>
                <p class="text-base text-slate-400 font-light leading-relaxed max-w-xs">
                    Infrastructures numériques haute performance pour entreprises ambitieuses.
                </p>
            </div>

            <div>
                <h3 class="text-xs font-bold text-white uppercase tracking-[0.2em] mb-8">Navigation</h3>
                <nav class="flex flex-col space-y-4">
                    {footerLinks.map(link => (
                        <a href={link.url} class="text-slate-400 hover:text-brand-primary transition-colors duration-300 font-light">
                            {link.title}
                        </a>
                    ))}
                </nav>
            </div>

            <div>
                <h3 class="text-xs font-bold text-white uppercase tracking-[0.2em] mb-8">Contact</h3>
                <address class="flex flex-col space-y-4 not-italic">
                    <a href={`mailto:${contactInfo.email}`} class="text-slate-400 hover:text-brand-primary transition-colors duration-300 font-light">
                        {contactInfo.email}
                    </a>
                    <a href={`tel:${contactInfo.phone.replace(/ /g, '')}`} class="text-slate-400 hover:text-brand-primary transition-colors duration-300 font-light">
                        {contactInfo.phone}
                    </a>
                </address>
            </div>

            <div>
                <h3 class="text-xs font-bold text-white uppercase tracking-[0.2em] mb-8">Légal</h3>
                <nav class="flex flex-col space-y-4">
                    {legalLinks.map(link => (
                        <a href={link.url} class="text-slate-400 hover:text-brand-primary transition-colors duration-300 font-light">
                            {link.title}
                        </a>
                    ))}
                </nav>
            </div>
        </div>
        
        <div class="flex flex-col md:flex-row justify-between items-center gap-6 text-[10px] uppercase tracking-[0.2em] text-slate-500 font-medium">
            <p>&copy; {currentYear} [NOM]. Tous droits réservés.</p>
            <div class="flex items-center gap-2">
                <span>Réalisé par amour avec</span>
                <span class="text-white">Astro</span>
                <span class="text-brand-primary">&</span>
                <span class="text-white">Tailwind</span>
            </div>
        </div>
    </div>
</footer>